<body class="main-page-body">
    <div class="head">
    </div>
    <div class="vulnerability-page">
        <div class="container">
            <h2>N Vulnerabilities Found <span style="color:grey;padding: 20px;">on DATE</span></h2>
            <div class="vulnerability-block" style="background-color: grey">
                <table class="table vulnerability-table" style="background-color: white;overflow:auto;">
                    <thead>
                        <tr>
                            <th>Identifier</th>
                            <th>CVSS Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @vulnerabilities.each do |vulnerability| %>
                            <tr>
                                <td><%= vulnerability.cve_name %></td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"
                                        style="width:70%">
                                            <%= vulnerability.cvss_score %> (<%= vulnerability.severity %>)
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>