<h1>Listing repositories</h1>

<table>
  <thead>
    <tr>
      <th>Select</th>
      <th>Project Name</th>
      <th>Owner</th>
      <th>Url</th>
      <th>Check</th>
      <!-- <th>Path</th>
      <th>Email</th>
      <th>Last checked</th> -->
      <th colspan="3">Others</th>
    </tr>
  </thead>

  <tbody>

    <%= form_tag scan_all_route_path, :method => :post do %>

      <% @repositories.each do |repository| %>
        <tr>
          <td><%= check_box_tag("repos[]", repository.id) %></td>
          <td><%= repository.name %></td>
          <td><%= repository.owner %></td>
          <td><%= repository.url %></td>
          <!-- <td><button>Scan</button></td> -->
          <td><%= link_to "Scan", scan_route_path(repository) %></td>
          

          <!-- <td><%= repository.path %></td>
          <td><%= repository.email %></td>
          <td><%= repository.last_checked %></td> -->
          <td><%= link_to 'Show', repository %></td>
          <td><%= link_to 'Edit', edit_repository_path(repository) %></td>
          <td><%= link_to 'Destroy', repository, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        </tr>
      <% end %>

      <%= submit_tag "Scan Selected" %><br><br>

    <% end %>



  </tbody>
</table>

<br>

<%= link_to 'New Repository', new_repository_path %>



